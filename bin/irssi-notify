#!/bin/bash

source ~/bin/d-conf

XPOS="1460"
LINES="1"
HEIGHT="12"
WIDTH="134"
ALIGN="LEFT"

while inotifywait ~/.irssi/fnotify >/dev/null 2>&1;do
	echo "You have been highlighted!" | dzen2 -bg $BG -fn $FONT -x $XPOS -y $YPOS -w $WIDTH -h $HEIGHT -p 999 -e 'onstart=uncollapse;button1=exit;button3=exit'
done

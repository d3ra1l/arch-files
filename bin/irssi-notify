#!/bin/bash

source ~/bin/d-conf

XPOS="1390"
HEIGHT="12"
WIDTH="205"
ALIGN="LEFT"

tail -n 10 .irssi/fnotify; : > .irssi/fnotify; tail -f .irssi/fnotify | dzen2 -bg $BG -fn $FONT -x $XPOS -y $YPOS -w $WIDTH -h $HEIGHT -e 'onstart=uncollapse;button1=exit;button3=exit;button2=exec:urxvt -e ~/bin/todo -e;button4=exit;button5=exit'
